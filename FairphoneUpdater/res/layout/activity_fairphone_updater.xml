<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/fairphone_updater_app_icon_small"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#33b5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/currentVersionImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/fairphone_updater_current_version" />

        <LinearLayout
            android:id="@+id/currentVersionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/youAreRunningText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/youAreRunning"
                android:textColor="#fff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/currentVersionNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="#fff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/updateAvailableText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/currentVersionReleaseDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/releasedIn"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/moreInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/moreInfo"
                android:textColor="#fff" 
                android:background="#666666"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/updateDownloadInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/downloadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/downloading"
                android:textColor="#fff"
                android:textSize="17sp" />

            <ProgressBar
                android:id="@+id/updateDownloadProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="35dp"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:max="100"
                android:padding="0dp"
                android:progress="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/otherVersionsLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >

        <Button
            android:id="@+id/fairphoneVersionsButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/fairphoneOS"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/aospVersionsButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/aospOS"
            android:textColor="#ffffff" />
    </LinearLayout>

    <include layout="@layout/version_detailed_info" />

</LinearLayout>