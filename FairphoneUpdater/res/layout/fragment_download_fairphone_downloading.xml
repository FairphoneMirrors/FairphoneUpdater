<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/version_downloading_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/blue"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            style="@style/TextBold16White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="download started" />

        <TextView
            style="@style/TextRegular14BlueLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_small_text_margin_top"
            android:gravity="center_horizontal"
            android:text="The OS update has started.\nThis may take some time depending on your\nnetwork connection speed." />

        <TextView
            style="@style/TextRegular14BlueLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_small_text_margin_top"
            android:text="Please be patient..." />

        <ProgressBar
            android:id="@+id/version_download_progress_bar"
            style="@style/ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/main_button_margin_top" />
    </LinearLayout>

</merge>