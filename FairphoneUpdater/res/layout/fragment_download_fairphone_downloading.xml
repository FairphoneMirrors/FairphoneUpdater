<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:id="@+id/version_downloading_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="download started" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The OS update has started.\nThis may take some time depending on your\nnetwork connection speed." />

		<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please be patient..."/>

            <ProgressBar
                android:id="@+id/version_download_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:max="100"
                android:padding="0dp"
                android:progress="1" />
    </LinearLayout>

</merge>