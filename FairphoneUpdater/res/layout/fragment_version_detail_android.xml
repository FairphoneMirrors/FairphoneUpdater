<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/main_padding"
    android:paddingLeft="@dimen/main_padding"
    android:paddingRight="@dimen/main_padding" >

    <TextView
        android:id="@+id/version_details_title_text"
        style="@style/TextRegular16White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_small_text_margin_top" />

    <TextView
        android:id="@+id/version_details_name_text"
        style="@style/TextLight24White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_small_text_margin_top"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/version_release_notes_text"
            style="@style/TextRegular14White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/version_warnings_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_small_text_margin_top"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            style="@style/TextBold16GreenDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Before you install please make sure" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/version_warnings_text"
                style="@style/TextRegular14GreenDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/download_and_update_button"
            style="@style/ButtonWhiteGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_padding"
            android:paddingBottom="25dp"
            android:paddingTop="5dp"
            android:text="Install Update" />

        <TextView
            android:id="@+id/download_and_update_button_version_text"
            style="@style/TextRegular16Green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:clickable="false"
            android:focusable="false"
            android:paddingBottom="5dp"
            android:text="Fairphone Peanuts v0.7" />
    </FrameLayout>

</LinearLayout>