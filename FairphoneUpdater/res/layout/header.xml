<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_header" >

        <TextView
            android:id="@+id/header_main_fairphone_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_big_height"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/blue"
            android:textSize="@dimen/header_big_text_size" />
        
        <TextView
            android:id="@+id/header_main_android_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_big_height"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/green"
            android:textSize="@dimen/header_big_text_size" 
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_fairphone_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_small_height"
            android:drawableLeft="@drawable/icon_back"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="@dimen/header_horizontal_padding"
            android:paddingRight="@dimen/header_horizontal_padding"
            android:textColor="@color/blue"
            android:textSize="@dimen/header_small_text_size"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_android_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_small_height"
            android:drawableLeft="@drawable/icon_back"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="@dimen/header_horizontal_padding"
            android:paddingRight="@dimen/header_horizontal_padding"
            android:textColor="@color/green"
            android:textSize="@dimen/header_small_text_size"
            android:visibility="gone" />
    </FrameLayout>

</merge>