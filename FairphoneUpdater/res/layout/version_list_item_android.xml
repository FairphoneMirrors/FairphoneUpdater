<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="13.3dp"
    android:background="#a3c539"
    android:clickable="true"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/versionImage"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:scaleType="centerInside"
        android:src="@drawable/aosp_versions_button_logo" />

    <LinearLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/versionNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="#FFF"
            android:textSize="26.6dp" />

        <TextView
            android:id="@+id/versionMainFeaturesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/checkDetails"
            android:textColor="#FFF" />
    </LinearLayout>

</LinearLayout>