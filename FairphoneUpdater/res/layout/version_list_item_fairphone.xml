<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="13.3dp"
    android:background="#2297d7"
    android:clickable="true"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/versionImage"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/logo_fairphone" />

    <TextView
        android:id="@+id/versionNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="4.4 KitKat"
        android:textColor="#FFF"
        android:textSize="26.6dp" />

    <TextView
        android:id="@+id/versionMainFeaturesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Check details and installation options"
        android:textColor="#FFF" />

</LinearLayout>